{
  "extends": [
    "tslint:recommended",
    "@fay-next/config/typescript/tslint-rules.json",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "jsx-boolean-value": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.{j,t}s",
      "**/node_modules/**/*.{j,t}s",
      "**/*.d.ts"
    ]
  }
}
